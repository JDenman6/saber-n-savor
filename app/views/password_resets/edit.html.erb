<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |field| %>
      <%= render 'shared/error_messages', object: field.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= field.label :password %>
      <%= field.password_field :password, class: 'form-control' %>

      <%= field.label :password_confirmation, "Confimify!" %>
      <%= field.password_field :password_confirmation, class: 'form-control' %>

      <%= field.submit "Update password", class: "btn btn-primary" %>
    <% end %>

  </div>

</div>
