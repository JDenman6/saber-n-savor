<% provide(:title, "Forgot password") %>
<h1>So you blacked out on your password, huh?</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: new_password_reset_path) do |field| %>
      <%= field.label :email %>
      <%= field.email_field :email, class: 'form-control' %>

      <%= field.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
