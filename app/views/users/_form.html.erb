
    <%= form_for(@user) do |field| %>
      <%= render 'shared/error_messages' %>

      <%= field.label :name %>
      <%= field.text_field :name, class: 'form-control' %>

      <%= field.label :email %>
      <%= field.email_field :email, class: 'form-control' %>

      <%= field.label :password %>
      <%= field.password_field :password, class: 'form-control' %>

      <%= field.label :password_confirmation, "Confirmify!" %>
      <%= field.password_field :password_confirmation, class: 'form-control' %>

      <%= field.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
