<%= form_for(@micropost) do |field| %>
  <%= render 'shared/error_messages', object: field.object %>
  <div class="field">
    <%= field.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= field.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
    <%= field.file_field :picture %>
  </span>
<% end %>
