<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |field| %>

      <%= field.label :email %>
      <%= field.email_field :email, class: 'form-control' %>

      <%= field.label :password %>
      <%= link_to "(Reset your password)", new_password_reset_path %>
      <%= field.password_field :password, class: 'form-control' %>

      <%= field.label :remember_me, class: "checkbox inline" do %>
        <%= field.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= field.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
